{
    "min_cmake_version": "3.7"
    "project_name": "test project",

    "default_cpp_standard": "11",
    "default_c_standard": "99",

    "allowed_cpp_standards": [
        "11",
        "14",
        "17"
    ],

    "allowed_c_standards": [
        "90",
        "99",
        "11"
    ],

    "output": {
        "main_exec": {
            "type": "executable",
            "base_file": "main.cpp",
            "r_source_dirs": [
                "src"
            ],
            "r_include_dirs": [
                "include"
            ],
            "imported_libraries": [

            ],
            "libraries": [

            ],
            "archive_output_dir": "lib",
            "library_output_dir": "lib",
            "executable_output_dir": "bin"
        }
    },

    "targets": {
        "debug": {
            "cpp_flags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ],
            "c_flags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ]
        },

        "release": {
            "cpp_flags": [
                "-O2",
                "-DNDEBUG",
                "-s"
            ],
            "c_flags": [
                "-O2",
                "-DNDEBUG",
                "-s"
            ]
        }
    }
}
