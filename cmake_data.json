{
    "min_cmake_version": "3.7",
    "project_name": "test_project",

    "default_cpp_standard": "11",
    "default_c_standard": "99",

    "allowed_cpp_standards": [
        "11",
        "14",
        "17"
    ],

    "allowed_c_standards": [
        "90",
        "99",
        "11"
    ],

    "output": {
        

        "main_lib_shared": {
            "type": "shared_lib",
            "r_source_dirs": [
                "src"
            ],
            "r_header_dirs": [
                "include"
            ],
            "r_include_dirs": [
                "include"
            ],
            "archive_output_dir": "lib",
            "library_output_dir": "lib"
        },

        "main_lib_static": {
            "type": "static_lib",
            "r_source_dirs": [
                "src"
            ],
            "r_header_dirs": [
                "include"
            ],
            "r_include_dirs": [
                "include"
            ],
            "archive_output_dir": "lib",
            "library_output_dir": "lib"
        },

        "main_exec_sl": {
            "type": "executable",
            "base_file": "main.cpp",
            "executable_output_dir": "bin",
            "r_source_dirs": [

            ],
            "r_header_dirs": [
                "include"
            ],
            "r_include_dirs": [

            ]
        },

        "main_exec_dl": {
            "type": "executable",
            "base_file": "main.cpp",
            "executable_output_dir": "bin",
            "r_source_dirs": [

            ],
            "r_header_dirs": [
                "include"        
            ],
            "r_include_dirs": [

            ]
        }
    },

    "imported_libs": {},

    "link_libs": {
        "main_exec_sl": [
            "main_lib_static"
        ],
        "main_exec_dl": [
            "main_lib_shared"
        ]
    },

    "targets": {
        "debug": {
            "cpp_flags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ],
            "c_flags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ]
        },

        "release": {
            "cpp_flags": [
                "-O2",
                "-DNDEBUG",
                "-s"
            ],
            "c_flags": [
                "-O2",
                "-DNDEBUG",
                "-s"
            ]
        }
    },

    "default_target": "debug"
}
